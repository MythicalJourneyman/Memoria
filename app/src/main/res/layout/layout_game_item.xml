<?xml version="1.0" encoding="utf-8"?>
<layout>

    <com.mythicaljourneyman.memoria.views.widgets.SquareFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="@drawable/game_item_background"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/game_item_front_background">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="32sp"
                android:textStyle="bold"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/game_item_back_background">

        </FrameLayout>
    </com.mythicaljourneyman.memoria.views.widgets.SquareFrameLayout>
</layout>