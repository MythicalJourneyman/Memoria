<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mythicaljourneyman.memoria">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity
            android:name=".views.activities.SplashActivity"
            android:configChanges="fontScale|layoutDirection|orientation|screenLayout|screenSize"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.HomeActivity"
            android:configChanges="fontScale|layoutDirection|orientation|screenLayout|screenSize"
            android:screenOrientation="sensorPortrait">
        </activity>
        <activity
            android:name=".views.activities.GameActivity"
            android:configChanges="fontScale|layoutDirection|orientation|screenLayout|screenSize"
            android:screenOrientation="sensorPortrait">
        </activity>
        <activity
            android:name=".views.activities.EditNamesActivity"
            android:configChanges="screenLayout|fontScale|layoutDirection|orientation|screenSize"
            android:screenOrientation="sensorPortrait">
        </activity>
    </application>
</manifest>
